@page "/cart"
@model CartModel

<div>
    <div class="text-center display-6">
        Cart
    </div>
    <table class="table table-hover">
        <thead>
            <th>Product</th>
            <th>Quantity</th>
            <th>Price</th>
            <th>Subtotal</th>
            <th></th>
        </thead>
        <tbody>
            @foreach (var line in Model.Cart?.Lines ?? Enumerable.Empty<CartLine>())
                {
                    <tr>
                        <td>@line.Product.ProductName</td>
                        <td>@line.Quantity</td>
                        <td>@line.Product.Price.ToString("c", new System.Globalization.CultureInfo("tr-TR"))</td>
                        <td>@((line.Product.Price*line.Quantity).ToString("c2", new System.Globalization.CultureInfo("tr-TR")))
                        </td>
                        <td>
                            <form method="post" asp-page-handler="Remove">
                                <input type="hidden" name="id" value="@line.Product.ProductId">
                                <input type="hidden" name="returnUrl" value="@Model.ReturnUrl">
                                <button type="submit" class="btn btn-sm btn-danger">
                                    <i class="fa fa-trash"></i>
                                    Remove
                                </button>
                            </form>
                        </td>
                    </tr>
                }
        </tbody>
        <tfoot>
            <tr>
                <td colspan="4" class="text-right">Total :</td>
                <td class="text-right text-danger">
                    @Model.Cart?.ComputeTotalValue().ToString("c2", new System.Globalization.CultureInfo("tr-TR"))
                </td>
            </tr>
        </tfoot>
    </table>

    <div class="text-center my-3">
        <div class="btn-group">
            <a href="@Model.ReturnUrl" class="btn btn-primary">Continue Shopping</a>
            <a class="btn btn-primary mx-2" asp-action="Checkout" asp-controller="Order" >Checkout</a>
        </div>
    </div>
</div>